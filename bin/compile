#!/bin/sh

set -e

# dirs
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1
CACHE_DIR=$2

# config
VERSION="2.5.0-beta"
CASPER_VERSION="master"
# Buildpack URL
ARCHIVE_NAME=phantomjs-${VERSION}-linux-ubuntu-trusty-x86_64.tar.gz
ARCHIVE_ROOT_FOLDER=phantomjs-${VERSION}-ubuntu-trusty
BUILDPACK_PHANTOMJS_PACKAGE=https://bitbucket.org/ariya/phantomjs/downloads/${ARCHIVE_NAME}

mkdir -p $CACHE_DIR
if ! [ -e $CACHE_DIR/$ARCHIVE_NAME ]; then
  echo "-----> Fetching PhantomJS ${VERSION} binaries at ${BUILDPACK_PHANTOMJS_PACKAGE}"
  curl $BUILDPACK_PHANTOMJS_PACKAGE -L -s -o $CACHE_DIR/$ARCHIVE_NAME
fi

echo "-----> Extracting PhantomJS ${VERSION} binaries to ${BUILD_DIR}/vendor/phantomjs"
tar zxfv $CACHE_DIR/$ARCHIVE_NAME -C $CACHE_DIR
mkdir -p $BUILD_DIR/vendor/phantomjs
mv $CACHE_DIR/$ARCHIVE_ROOT_FOLDER/* $BUILD_DIR/vendor/phantomjs
chmod a+x $BUILD_DIR/vendor/phantomjs/bin/*

echo "-----> Cloning CasperJS"
cd ${BUILD_DIR}/vendor
git clone git://github.com/pmfawkes/casperjs.git
cd casperjs
git checkout ${CASPER_VERSION}

echo "-----> Installing .profile.d/casperjs.sh"
mkdir -p ${BUILD_DIR}/.profile.d
cp ${BIN_DIR}/casperjs.sh ${BUILD_DIR}/.profile.d/
